<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" shutdownHook="disable">
    <filters>
        <MarkerFilter marker="QUARRY_TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
    </filters>
    <Appenders>
        <RollingRandomAccessFile name="DebugFile" fileName="quarry-logs/quarry-debug.log"
                                 filePattern="quarry-logs/quarry-debug-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%d{ISO8601}][%level{length=1}] [%logger/%markerSimpleName]: %m%n%xEx"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="200MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20" fileIndex="min"/>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="DebugFile" level="debug"/>
        </Root>
    </Loggers>
</Configuration>
